<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            android:text=" Restaurant Name"
            android:textColor="@android:color/white"
            android:textSize="14dp" />



        <TextView
            android:id="@+id/txtRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textSize="10dp"
            android:layout_above="@+id/addressLabel"
            android:layout_toEndOf="@+id/addressLabel"
            android:layout_marginStart="19dp" />

        <TextView
            android:id="@+id/txtAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="10dp"
            android:layout_above="@+id/categoryLabel"
            android:layout_alignStart="@+id/txtRating" />

        <TextView
            android:id="@+id/txtType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="10dp"
            android:layout_alignBottom="@+id/categoryLabel"
            android:layout_alignStart="@+id/txtAddress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: "
            android:id="@+id/addressLabel"
            android:textSize="12sp"
            android:layout_below="@+id/ratingLabel"
            android:layout_alignStart="@+id/ratingLabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Rating: "
            android:layout_marginLeft="3sp"
            android:layout_marginTop="2sp"
            android:id="@+id/ratingLabel"
            android:layout_below="@+id/txtName"
            android:layout_alignParentStart="true"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Category:"
            android:layout_marginBottom="2sp"
            android:id="@+id/categoryLabel"
            android:textSize="12sp"
            android:layout_below="@+id/addressLabel"
            android:layout_toStartOf="@+id/txtRating" />

    </RelativeLayout>

</android.support.v7.widget.CardView>